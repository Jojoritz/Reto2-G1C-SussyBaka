<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefWidth="1280.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.components.MenuBarController">
    <children>
        <MenuBar fx:id="menuBar" prefWidth="1280.0">
            <menus>
                <Menu fx:id="menMenu" mnemonicParsing="false" text="Menu">
                    <items>
                        <MenuItem fx:id="menitmInitialScreen" mnemonicParsing="false" onAction="#handleMenuBarStart" text="Inicio" />
                        <MenuItem fx:id="menitmCourses" mnemonicParsing="false" onAction="#handleMenuBarCourses" text="Cursos" />
                        <MenuItem fx:id="menitmPost" mnemonicParsing="false" onAction="#handleMenuBarPost" text="Posts" />
                        <MenuItem fx:id="menitmSubjects" mnemonicParsing="false" onAction="#handleMenuBarSubjects" text="Asignaturas" />
                        <MenuItem fx:id="menitmViewProfile" mnemonicParsing="false" onAction="#handleMenuBarProfile" text="Ver Perfil" />
                        <MenuItem fx:id="menitmCloseSession" mnemonicParsing="false" onAction="#handleMenuBarLogOff" text="Cerrar Session" />
                    </items>
                </Menu>
                <Menu fx:id="menHelp" mnemonicParsing="false" text="Ayuda">
                    <items>
                        <MenuItem fx:id="menitmHelp" mnemonicParsing="false" onAction="#handleMenuBarHelp" text="Ayuda" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</HBox>
