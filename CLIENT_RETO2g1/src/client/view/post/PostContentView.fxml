<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="720" prefWidth="1280" stylesheets="@../css/style.css" 
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="client.view.post.PostContentViewController">
    <children>
        <ScrollPane prefHeight="720.0" prefWidth="1280.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="1350" prefWidth="1260.0">
                    <children>
                        <fx:include fx:id="menuBarContainer" source="../components/MenuBar.fxml" />
                        <Label fx:id="txtTitle" layoutX="-1.0" layoutY="44.0" prefHeight="54.0" prefWidth="1266.0" text="Título Post">
                            <font>
                                <Font size="28.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="txtAreaContent" layoutX="99.0" layoutY="124.0" prefHeight="350.0" prefWidth="1022.0" promptText="Content here" />
                        <TextField fx:id="txtImgUrl" layoutX="98.0" layoutY="498.0" prefHeight="25.0" prefWidth="304.0" text="Image Url" />
                        <ImageView fx:id="imgView" fitHeight="200.0" fitWidth="367.0" layoutX="450.0" layoutY="493.0" pickOnBounds="true" preserveRatio="true" />
                        <Hyperlink fx:id="videoHyperLink" layoutX="855.0" layoutY="552.0" prefHeight="30.0" prefWidth="264.0" text="Hyperlink" />
                        <TextField fx:id="txtVideoUrl" layoutX="853.0" layoutY="494.0" prefHeight="35.0" prefWidth="269.0" text="Video Url" />
				  
                        <TableView fx:id="tableComment" editable="true" layoutX="99.0" layoutY="730.0" prefHeight="595.0" prefWidth="1027.0">
                            <columns>
                                <TableColumn fx:id="columnUserName" editable="false" prefWidth="345.0" text="Nombre de usuario" />
                                <TableColumn fx:id="columnDate" editable="true" prefWidth="300.0" text="Fecha de publicacion" />
                                <TableColumn fx:id="columnComment" editable="true" prefWidth="385.0" text="Comentario" />
                            </columns>
                            <contextMenu>
                                <ContextMenu>
                                    <items>
                                        <MenuItem fx:id="contextCommentCopy" mnemonicParsing="false" onAction="#handleCommentCopy" text="Copy" />
                                        <MenuItem fx:id="contextCommentPaste" mnemonicParsing="false" onAction="#handleCommentPaste" text="Paste" />
                                        <MenuItem fx:id="contextCommentDelete" mnemonicParsing="false" onAction="#handleCommentDelete" text="Eliminar" />
                                        <MenuItem fx:id="contextCommentRefresh" mnemonicParsing="false" onAction="#handleCommentRefresh" text="Actualizar" />
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </TableView>
                        <Button fx:id="btnPostContentSave" layoutX="1150.0" layoutY="1050.0" mnemonicParsing="false" prefWidth="75" text="Guardar" />
                        <Button fx:id="btnPostContentAdd" layoutX="1150.0" layoutY="1100.0" mnemonicParsing="false" prefWidth="75" text="Añadir" />
                        <Button fx:id="btnPostContentDelete" layoutX="1150.0" layoutY="1150.0" mnemonicParsing="false" prefWidth="75" text="Eliminar" />
                        <Button fx:id="btnPostContentCancel" layoutX="1150.0" layoutY="1200.0" mnemonicParsing="false" prefWidth="75" text="Cancelar" />
                        <Button fx:id="btnPostContentBack" layoutX="1150.0" layoutY="1250.0" mnemonicParsing="false" prefWidth="75" text="Volver" />
                        <Button fx:id="btnPostContentPrint" layoutX="15.0" layoutY="1250.0" mnemonicParsing="false" prefWidth="75" text="Imprimir" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</Pane>
